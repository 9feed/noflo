{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "outDir": ".",
    "declaration": true,
    "strict": false,
    "rootDir": "src"
  },
  "include": [
    "src/*.ts",
    "src/**/*.js",
    "src/lib/**/*.js"
  ],
  "exclude": [
    "lib/*.js",
    "components/*.js"
  ]
}
